* {
  margin: 0;
  padding: 0;
}

main {
  display: flex;
  height: 100vh;
  width: 100vw;
  align-items: center;
  justify-content: center;
  flex-flow: column nowrap;

  .messageContainer {
    flex: 0 1;
    background-color: lightgreen;
    height: 10rem;
    padding: 1.2rem;
    margin-bottom: 1.2rem;
  }

  .surveyForm {
    flex: 0 1 auto;
    width: 20rem;
    height: 20rem;

    form {
      display: flex;
      align-items: flex-start;
      justify-content: space-evenly;
      flex-flow: column nowrap;
    }
  }
}
